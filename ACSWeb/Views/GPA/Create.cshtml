@model ACSWeb.Models.GPA

@{
    ViewData["Title"] = "Створити";
}

<h2>Створення:</h2>

<h4>ГПА</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Тит ГПА</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GTDType" class="control-label">Тип ГТД</label>
                <input asp-for="GTDType" class="form-control" />
                <span asp-validation-for="GTDType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VCNType" class="control-label">Тип ВЦН</label>
                <input asp-for="VCNType" class="form-control" />
                <span asp-validation-for="VCNType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StationNumber" class="control-label">Ст. №</label>
                <input asp-for="StationNumber" class="form-control" />
                <span asp-validation-for="StationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompShopNumber" class="control-label">КЦ №</label>
                <input asp-for="CompShopNumber" class="form-control" />
                <span asp-validation-for="CompShopNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KSID" class="control-label">КС, на якій встановлено ГПА</label>
                <select asp-for="KSID" class ="form-control" asp-items="ViewBag.KSID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до переліку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
