@model ACSWeb.Models.GPA

@{
    ViewData["Title"] = "Змінити";
}

<h2>Змінити ГПА</h2>

<h4>ГПА:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GTDType" class="control-label"></label>
                <input asp-for="GTDType" class="form-control" />
                <span asp-validation-for="GTDType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VCNType" class="control-label"></label>
                <input asp-for="VCNType" class="form-control" />
                <span asp-validation-for="VCNType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StationNumber" class="control-label"></label>
                <input asp-for="StationNumber" class="form-control" />
                <span asp-validation-for="StationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompShopNumber" class="control-label"></label>
                <input asp-for="CompShopNumber" class="form-control" />
                <span asp-validation-for="CompShopNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KSID" class="control-label"></label>
                <select asp-for="KSID" class="form-control" asp-items="ViewBag.KSID"></select>
                <span asp-validation-for="KSID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до переліку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
