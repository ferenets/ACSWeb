                @Html.DisplayFor(modelItem => item.AOType.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PLC.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SAKType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
